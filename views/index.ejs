<% include partials/header %>
  <div class="row">
    <div class="col-md-6">
      <form action="/todo/add" method="post">
        <div class="form-group">
          <label>To Do Name</label>
          <input class="form-control" type="text" name="title" placeholder="Title">
        </div>
        <div class="form-group">
          <label>To Do description</label>
          <input class="form-control" type="text" name="description" placeholder="Description">
        </div>
        <button class="btn btn-primary btn-block" type="submit" name="button">Submit</button>
      </form>
    </div>
    <div class="col-md-6">
      <ul class="list-group">
        <% todos.forEach(function(todo) { %>
          <li class="list-group-item"><%= todo.title %> - <%= todo.body %><a class="btn btn-default" href="/todo/edit/<%=todo._id%>">Edit</a><a data-id="<%= todo._id %>" href="#" class="btn btn-danger delete-todo">Delete</a> </li> 
        <% })%>
      </ul>
    </div>
  </div>






<% include partials/footer %>
