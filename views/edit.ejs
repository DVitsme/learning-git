<% include partials/header %>

  <div class="row">
    <div class="col-md-6">
      <form action="/todo/edit/<%= todo._id%>" method="post">
        <div class="form-group">
          <label>To Do Name</label>
          <input class="form-control" type="text" name="title" placeholder="Title" value="<%= todo.title%>">
        </div>
        <div class="form-group">
          <label>To Do description</label>
          <input class="form-control" type="text" name="description" placeholder="description" value="<%= todo.body%>">
        </div>
        <button class="btn btn-primary" type="submit" name="button">Submit</button><a class="btn btn-danger" href="/">cancel</a>
      </form>
    </div>
  </div>



  <% include partials/footer %>
